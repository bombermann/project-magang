extends layout

block content
  .post-edit-container(style="max-width: 700px; margin: 50px auto; padding: 30px; background-color: #2c2c3d; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.4); color: white;")

    h2(style="text-align: center; margin-bottom: 30px; font-size: 24px;") ‚úèÔ∏è Edit Postingan

    form(action=`/post/edit/${post.id}`, method='POST')
      .form-group(style="margin-bottom: 20px;")
        label(for='title', style="display: block; margin-bottom: 8px; font-weight: bold;") Judul
        input(
          type='text',
          name='title',
          value=post.title,
          required,
          placeholder="Judul postingan",
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white;"
        )

      .form-group(style="margin-bottom: 25px;")
        label(for='content', style="display: block; margin-bottom: 8px; font-weight: bold;") Konten
        textarea(
          name='content',
          required,
          rows='6',
          placeholder="Isi konten...",
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white; resize: vertical;"
        )= post.content

      button(
        type='submit',
        style="width: 100%; padding: 12px; background-color: #f39c12; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer;"
      ) üíæ Simpan Perubahan

      a(
        href='/post',
        style="display: inline-block; margin-top: 15px; text-align: center; width: 100%; color: #3498db; text-decoration: none;"
      ) ‚Üê Kembali ke Daftar Postingan
