extends layout

block content
  .post-page-container(style="max-width: 600px; margin: 50px auto; padding: 30px; background-color: #2c2c3d; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.4); color: white;")

    // Judul Form
    h2(style="text-align: center; margin-bottom: 30px; font-size: 24px;") ‚ûï Tambah Postingan Baru

    form(action="/post/add", method="POST")
      .form-group(style="margin-bottom: 20px;")
        label(for="postTitle", style="display: block; margin-bottom: 8px; font-weight: bold;") Judul Postingan
        input(
          type="text",
          name="postTitle",
          placeholder="Masukkan judul postingan",
          required,
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white;"
        )

      .form-group(style="margin-bottom: 25px;")
        label(for="postContent", style="display: block; margin-bottom: 8px; font-weight: bold;") Isi Konten
        textarea(
          name="postContent",
          rows="6",
          placeholder="Masukkan isi konten postingan",
          required,
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white; resize: vertical;"
        )

      button(
        type="submit",
        style="width: 100%; padding: 12px; background-color: #2ecc71; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer;"
      ) üíæ Simpan Postingan

      a(
        href="/post",
        style="display: inline-block; margin-top: 15px; text-align: center; width: 100%; color: #3498db; text-decoration: none;"
      ) ‚Üê Kembali ke Daftar Postingan
