extends layout

block content
  .admin-edit-container(style="max-width: 700px; margin: 50px auto; padding: 30px; background-color: #2c2c3d; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.4); color: white;")

    h2(style="text-align: center; margin-bottom: 30px; font-size: 24px;") ‚úèÔ∏è Edit Admin

    form(action=`/users/edit/${admin.id}`, method='POST')
      .form-group(style="margin-bottom: 20px;")
        label(for="username", style="display: block; margin-bottom: 8px; font-weight: bold;") Username
        input(
          type="text",
          name="username",
          value=admin.username,
          required,
          placeholder="Username admin",
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white;"
        )

      .form-group(style="margin-bottom: 25px;")
        label(for="password", style="display: block; margin-bottom: 8px; font-weight: bold;") Password Baru
        input(
          type="password",
          name="password",
          required,
          placeholder="Masukkan password baru",
          style="width: 100%; padding: 10px; border: none; border-radius: 5px; background-color: #3a3a3a; color: white;"
        )

      button(
        type="submit",
        style="width: 100%; padding: 12px; background-color: #f39c12; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer;"
      ) üíæ Simpan Perubahan

      a(
        href="/users",
        style="display: inline-block; margin-top: 15px; text-align: center; width: 100%; color: #3498db; text-decoration: none;"
      ) ‚Üê Kembali ke Daftar Admin
