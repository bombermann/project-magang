extends layout

block content
  .post-page-container(style="max-width: 900px; margin: 50px auto; padding: 30px; background-color: #2c2c3d; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.4); color: white;")

    // Judul Atas
    h2(style="margin-bottom: 20px; font-size: 24px;") üë®‚ÄçüöÄ Daftar Admin Users

    // Baris Tombol Horizontal
    .button-bar(style="display: flex; justify-content: space-between; margin-bottom: 25px;")
      a(href="/dashboard", style="background-color: #3498db; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-weight: bold;") üè† Dashboard
      a(href="/users/add", style="background-color: #2ecc71; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; font-weight: bold;") ‚ûï Tambah Admin

    // Tabel Admin
    if admins.length
      table(style="width: 100%; border-collapse: collapse; background-color: #363649; color: white; border-radius: 5px; overflow: hidden;")
        thead
          tr(style="background-color: #444;")
            th(style="padding: 12px; text-align: left;") Username
            th(style="padding: 12px; text-align: center;") Aksi
        tbody
          each admin in admins
            tr
              td(style="padding: 10px; border-top: 1px solid #555;")= admin.username
              td(style="padding: 10px; text-align: center; border-top: 1px solid #555;")
                a(href="/users/edit/" + admin.id, style="color: #f1c40f; margin-right: 10px; text-decoration: none; font-weight: bold;") ‚úèÔ∏è Edit
                a(href="/users/delete/" + admin.id, onclick="return confirm('Yakin ingin menghapus admin ini?')", style="color: #e74c3c; text-decoration: none; font-weight: bold;") ‚ùå Hapus
    else
      p(style="text-align: center; color: #ccc; margin-top: 20px;") Tidak ada admin ditemukan.
